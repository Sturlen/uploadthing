{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "noEmit": true,
    "lib": ["ES2022", "dom", "dom.iterable"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
